<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <parameters>
        <parameter key="form.resolved_type_factory.class">Ivory\OrderedFormBundle\Form\OrderedResolvedFormTypeFactory</parameter>
        <parameter key="ivory_ordered_form.form_extension.class">Ivory\OrderedFormBundle\Form\OrderedFormExtension</parameter>
    </parameters>

    <services>
        <service id="ivory_ordered_form.form_extension" class="%ivory_ordered_form.form_extension.class%">
            <tag name="form.type_extension" alias="form" />
        </service>
    </services>
</container>
